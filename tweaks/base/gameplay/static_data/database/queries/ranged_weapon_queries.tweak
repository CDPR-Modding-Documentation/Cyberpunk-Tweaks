package Query
using RTDB

WeaponQuery : ItemQuery
{
	tagsToExclude = 
	[
		"SalesDLC"
	];
}

RangedWeaponQuery : WeaponQuery
{
	recordType = "Items.Base_Weapon";
	tags = 
	[
		"RangedWeapon"
	];
}

