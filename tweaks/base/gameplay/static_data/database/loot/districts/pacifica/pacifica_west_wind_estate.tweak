package Loot
using RTDB

PacificaWestWindEstate : Pacifica
{
	minItemsToLoot = 1;
	maxItemsToLoot = 3;
}

PacificaWestWindEstateClothing : PacificaWestWindEstate
{
	queries = 
	[
		{
			dropChance = 0.2;
