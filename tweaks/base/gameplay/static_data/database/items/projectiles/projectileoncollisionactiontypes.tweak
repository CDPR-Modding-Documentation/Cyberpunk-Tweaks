package ProjectileOnCollisionActions
using RTDB

Stop : ProjectileOnCollisionAction
{
	CName enumName = "Stop";
	string enumComment = "projectile will stop on collision e.g. missile detonates";
}

Bounce : ProjectileOnCollisionAction
{
	CName enumName = "Bounce";
	string enumComment = "projectile will bounce off a surface";
}

StopAndStick : ProjectileOnCollisionAction
{
	CName enumName = "StopAndStick";
	string enumComment = "Projectile will stop and attach to whatever it hit with the direction the projectile was traveling";
}

StopAndStickPerpendicular : ProjectileOnCollisionAction
{
	CName enumName = "StopAndStickPerpendicular";
	string enumComment = "StopAndStick but uses the direction of the hit normal";
}

Pierce : ProjectileOnCollisionAction
{
	CName enumName = "Pierce";
	string enumComment = "Ignores collision and passes through but still fires the OnCollision event";
}

