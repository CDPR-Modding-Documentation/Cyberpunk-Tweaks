LookAtActionTest : AIActionSmartComposite
{
	type = "AISmartCompositeType.Sequence";
	nodes = 
	[
		"Character.WaitAMoment", "Character.LookAtPlayer"
	];
}

WaitAMoment : AIAction
{
	startup = 
	{
		duration = 3.f;
	};
}

LookAtPlayer : AIAction
{
	loop = 
	{
		repeat = 0;
		duration = 0.f;
		movePolicy = 
		{
			strafingTarget = "AIActionTarget.Player";
			deadAngle = 1.f;
		};
	};
	lookats = 
	[
		{
			preset = "LookatPreset.DroneHorizontal";
			target = "AIActionTarget.Player";
		}, 
		{
			preset = "LookatPreset.DroneVertical";
			target = "AIActionTarget.Player";
		}
	];
}

